@page "/internal/promocodes"
@model Roblox.Website.Pages.Internal.Promocodes

@{
    Layout = "Shared/_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12 col-lg-6 offset-lg-3">
            <h3>Promocodes</h3>
            @if (Model.failureMessage != null)
            {
                <p class="text-danger">@Model.failureMessage</p>
            }
            @if (Model.successMessage != null)
            {
                <p class="text-success">@Model.successMessage</p>
            }
            <form class="mt-4" method="POST">
                <input name="promocode" type="text" class="form-control" placeholder="Promocode" />
                @Html.AntiForgeryToken()
                <div style="max-width: 100px;" class="mt-2">
                <input type="submit" class="btn btn-warning mt-4" value="Redeem" data-form-type="action">
                    @* <input type="submit" class="form-control btn btn-primary" value="Redeem"/> *@
                </div>
            </form>
        </div>
    </div>
</div>